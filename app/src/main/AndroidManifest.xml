<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.ryoo.app.taskmanager">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- To enable app invites -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- To geotag new posts with current location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- To get pictures from camera for new posts -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ProfileActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BaseActivity" />
        <activity
            android:name=".TodolistActivity"
            android:label="@string/title_activity_todolist"
            android:parentActivityName=".ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kr.ryoo.app.taskmanager.ProfileActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".TodolistActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kr.ryoo.app.taskmanager.TodolistActivity" />
        </activity>
        <activity android:name=".TodoAddActivity"
            android:label="@string/title_activity_todo_add"
            android:parentActivityName=".TodolistActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kr.ryoo.app.taskmanager.TodolistActivity" />
        </activity>

        <activity android:name=".TodoEditActivity"
            android:label="@string/title_activity_todo_edit"
            android:parentActivityName=".TodolistActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kr.ryoo.app.taskmanager.TodolistActivity" />
        </activity>
    </application>

</manifest>